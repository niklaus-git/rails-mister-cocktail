
<h1><%= @cocktail.name %> </h1>

<br>
<h4>recipe </h4>
<% @cocktail.doses.each do |dose| %>
  <li>
    take <%= dose.description %> of <%= dose.ingredient.name %> <br>
    <%= link_to "delete this dose", dose_path(dose), method: :delete %>
  </li>
<%end%>
<br>
<br>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description , placeholder: 'How much of this?' %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.submit "Create" %>
<% end %>

<br>
<br>



<%= link_to 'Back', cocktails_path %>

